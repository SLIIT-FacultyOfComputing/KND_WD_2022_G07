<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_color_01"
    tools:context=".DisplayResultsActivity">

    <TextView
        android:id="@+id/display_search_results_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/custom_color_01"
        android:text="@string/display_search_results_header"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/display_search_keyword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/custom_color_01"
        android:text="@string/display_search_keyword"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/book_rec_view"
        android:background="@drawable/background_display_search_results"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>